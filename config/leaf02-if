# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

# 03-MAR-2020, ALQ

# The loopback network interface
auto lo
iface lo inet loopback
  address 10.0.0.12/32

# Die OOB Schnittstelle
auto eth0
iface eth0 inet dhcp

# Zum Server01
auto swp1
iface swp1
  address 172.18.0.2/30
# This is required for Vagrant only
  post-up ip link set swp1 promisc on
  vrf vrf1

# Zum Server02
auto swp2
iface swp2
  address 172.22.0.2/30
# This is required for Vagrant only
  post-up ip link set swp2 promisc on
  vrf vrf1

# BGP IPv6
auto swp51
iface swp51

# BGP IPv6
auto swp52
iface swp52

# Define the bridge for STP
auto bridge
iface bridge
  bridge-vlan-aware yes
  bridge-ports vxlan100001
  bridge-vids 1001
  bridge-pvid 1

auto vxlan100001
iface vxlan100001
    vxlan-id 100001
    vxlan-local-tunnelip 10.0.0.12
    bridge-learning off
    bridge-access 1001

auto vrf1
iface vrf1
   vrf-table auto
  
auto vlan1001
iface vlan1001
  vlan-id 1001
  vlan-raw-device bridge
  vrf vrf1
