- hosts: server01
  name: Configure /e/n/i
  become: yes
  tasks:
    - name: Entfernen der alten Datei
      file:
        path: '/etc/network/interfaces'
        state: absent

    - copy:
        src: /home/cumulus/OpenNetworking-002/config/server01-if
        dest: /etc/network/interfaces
        
    - name: Apply Interface Configuration Delta
      shell: nohup bash -c 'sleep 2 && /sbin/ifreload -a > /tmp/ifreload.out 2>&1' &
      async: 1
      poll: 0
      changed_when: true
  
    - name: Wait 5 seconds for SSH port to Reopen and contain "OpenSSH" In The Connection String
      wait_for:
        port: 22
        host: 'server01'
        search_regex: OpenSSH
        delay: 5
      connection: local
      become: false
